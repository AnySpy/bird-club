<body>
    <div class="responsive-iframe-container">
        <!-- TODO: Fix the problem with scrolling -->
        <iframe 
            class="mobile-view" 
            src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=America%2FChicago&showPrint=0&title=The%20Bird%20Club%20MSU%20Events&mode=AGENDA&src=dGhlYmlyZGNsdWJtc3VAZ21haWwuY29t&color=%23039BE5" 
            style="border:solid 1px #777" 
            width="800" 
            height="600" 
            frameborder="0" 
            scrolling="no">
        </iframe>
        <iframe 
            class="desktop-view" 
            src="https://calendar.google.com/calendar/embed?height=600&wkst=1&ctz=America%2FChicago&showPrint=0&title=The%20Bird%20Club%20MSU%20Events&mode=MONTH&src=dGhlYmlyZGNsdWJtc3VAZ21haWwuY29t&color=%23039BE5" 
            style="border:solid 1px #777" 
            width="800" 
            height="600" 
            frameborder="0" 
            scrolling="no">
        </iframe>
    </div>
</body>

<style>
    .responsive-iframe-container {
        position: relative;
        padding-bottom: 56.25%;
        padding-top: 30px;
        height: 0;
        overflow: hidden;
    }

    .responsive-iframe-container iframe,
    .vresponsive-iframe-container object,
    .vresponsive-iframe-container embed {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
    }

    .mobile-view {
        display: none;
    }

    .desktop-view {
        display: block;
    }

    @media screen and (max-width: 768px) {
        .responsive-iframe-container {
            padding-bottom: 180%;
        }

        .mobile-view {
            display: block;
        }

        .desktop-view {
            display: none;
        }
    }
</style>

<script>
    function resizeVisibleIframe() {
        const header = document.querySelector('header');
        const headerHeight = header ? header.offsetHeight : 0;
        const viewportHeight = window.innerHeight;

        const mobile = window.matchMedia("(max-width: 768px)").matches;
        const iframe = document.querySelector(mobile ? ".mobile-view" : ".desktop-view") as HTMLIFrameElement;

        if (iframe) {
            iframe.style.height = (viewportHeight - headerHeight) + 'px';
        }
    }

    window.addEventListener('load', resizeVisibleIframe);
    window.addEventListener('resize', resizeVisibleIframe);
</script>