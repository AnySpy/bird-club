        <!-- Desktop -->
        <nav class="nav desktopNav">
            <a href="/">Home</a>
            <a href="/calendar">Calendar</a>
            <a href="/about">About</a>
        </nav>

        <!-- Mobile -->
        <div class="burgerContainer mobileNav">
            <label class="burger" for="burger">
                <input type="checkbox" id="burger" class="burgerToggle"/>
                <span></span>
                <span></span>
                <span></span>
                
                <div class="slideoutMenu">
                    <a href="/">Home</a>
                    <a href="/calendar">Calendar</a>
                    <a href="/about">About</a>
                </div>
            </label>
        </div>
    </div>
</header>

<style>
    .container {
        display: flex;
        flex-direction: row;
        align-items: center;
        background-color: hsl(0, 0%, 7%);
        overflow: hidden;
        max-height: 100px;
    }

    .logo {
        padding: 0.5%;
        border-radius: 50%;
        max-height: 75px;
    }

    /* Desktop Nav Styles */
    .nav {
        display: flex;
        column-gap: 7%;
    }

    .nav a {
        float: left;
        color: #f2f2f2;
        text-align: center;
        padding: 14px 16px;
        text-decoration: none;
        font-size: 17px;
    }

    .nav a:hover {
        background-color: #ddd;
        color: black;
    }

    .nav a:active {
        background-color: #04AA6D;
        color: white;
    }

    /* Mobile Nav Styles */
    .burgerContainer {
        padding: 3%;
        margin-left: auto;
    }
    
    .burgerToggle {
        display: none;
    }

    .slideoutMenu {
        position: fixed;
        top: 0;
        right: -100%;
        width: 70%;
        height: 100vh;
        background-color: #111;
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
        padding: 5rem 2rem;
        transition: right 0.3s ease-in-out;
        z-index: 100;
    }

    .slideoutMenu a {
        color: white;
        text-decoration: none;
        font-size: 1.2rem;
    }

    #burger:checked ~ .slideoutMenu {
        right: 0;
    }

    /* From Uiverse.io by Cevorob */ 
    .burger {
        position: relative;
        width: 40px;
        height: 30px;
        background: transparent;
        cursor: pointer;
        display: block;
        z-index: 1100;
    }

    .burger input {
        display: none;  
    }

    .burger span {
        display: block;
        position: absolute;
        height: 4px;
        width: 100%;
        background: white;
        border-radius: 9px;
        opacity: 1;
        left: 0;
        transform: rotate(0deg);
        transition: .25s ease-in-out;
        z-index: 1100;
    }

    .burger span:nth-of-type(1) {
        top: 0px;
        transform-origin: left center;
    }

    .burger span:nth-of-type(2) {
        top: 50%;
        transform: translateY(-50%);
        transform-origin: left center;
    }

    .burger span:nth-of-type(3) {
        top: 100%;
        transform-origin: left center;
        transform: translateY(-100%);
    }

    .burger input:checked ~ span:nth-of-type(1) {
        transform: rotate(45deg);
        top: 0px;
        left: 5px;
    }

    .burger input:checked ~ span:nth-of-type(2) {
        width: 0%;
        opacity: 0;
    }

    .burger input:checked ~ span:nth-of-type(3) {
        transform: rotate(-45deg);
        top: 28px;
        left: 5px;
    }

    @media screen and (max-width: 768px) {
        .desktopNav {
            display: none;
        }

        .logo {
            max-height: 45px;
        }
    }

    @media screen and (min-width: 768px) {
        .mobileNav { 
            display: none;
        }
    }
</style>